<link rel="stylesheet" href="https://unpkg.com/flowbite@1.4.4/dist/flowbite.min.css" />
<header class="navbar bg-body-light pb-5">
  <div class="navbar-start">
  </div>
  <div class="navbar-center">
    <%= link_to root_path do %>
      <%= image_tag "logo3.png" %>
    <% end %>
  </div>
  <div class="navbar-end">
    <div class="dropdown dropdown-hover px-8">
      <div tabindex="0" role="button" class="btn m-1">レパートリー</div>
      <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
        <li><%= link_to Repertoire.model_name.human, repertoires_path %></li>
        <li><%= link_to (t 'defaults.repertoire.new'), new_repertoire_path %></li>
      </ul>
    </div>
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <img src="/assets/defaulticon2.png" alt="">
        </div>
      </label>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
        <li><%= link_to (t 'defaults.logout'), destroy_user_session_path, data: { turbo_method: :delete } %></li>
      </ul>
    </div>
  </div>
</header>

